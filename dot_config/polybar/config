# remmybar
# a polybar config

[colors]
background = #17181f
background-secondary = #282a36
background-tertiary = #44475a
foreground = #f8f8f2
accent = #6272a4
cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red = #ff5555
yellow = #f1fa8c

[bar/top]
monitor = HDMI-0
width = 100%
height = 30
wm-restack = bspwm

# tray
tray-position = right

# Spacing stuff
spacing = 1
padding-right = 0
module-margin-left = 1
module-margin-right = 1

# Change background according to colours defined above
background = ${colors.background}
foreground = ${colors.foreground}

# Fonts
font-0 = JetBrains Mono NL,JetBrains Mono NL Medium:style=Medium,Regular:pixelsize=12;
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=11;
font-2 = Font Awesome 5 Free:pixelsize=11;

modules-right = cava date
modules-center = xwindow
modules-left = bspwm

[module/date]
type = internal/date
date = %Y-%m-%d %H:%M

format-padding = 2
format-background = ${colors.background-secondary}

[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>

# Active label props
label-active = %index%
label-active-background = ${colors.accent}
label-active-padding = 2

# Occupied label props
label-occupied = %index%
label-occupied-background = ${colors.background-secondary}
label-occupied-padding = 2

# Urgent label props
label-urgent = %index%
label-urgent-background = ${colors.pink}
label-urgent-padding = 2

# Empty label props
label-empty = %index%
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
format-padding-top = 5

[module/cava]
type = custom/script
tail = true
exec = $HOME/.config/polybar/cava.sh
format = <label>
format-font = 5
label = %output%

; vim:ft=dosini
